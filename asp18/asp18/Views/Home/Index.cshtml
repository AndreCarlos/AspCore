@model IEnumerable<asp18.Models.Cliente>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>

    <h1>CLIENTES</h1>

    <hr />
    <a asp-action="novo_cliente">Adicionar cliente</a>
    <hr />

    @if (Model.Count() != 0)
    {
        //apresentar a lista de clientes
        @foreach (var item in Model)
        {
            <p>
                Nome: @item.nome | @item.telefone |
                <a asp-controller="home" asp-action="eliminar" asp-route-id="@item.id">Eliminar</a> |
                <a asp-controller="home" asp-action="editar" asp-route-id="@item.id">Editar</a>
            </p>
        }

        <p>Clientes: @Model.Count()</p>

    }
    else
    {
        <p>Não existem clientes registrados.</p>
    }

</body>
</html>