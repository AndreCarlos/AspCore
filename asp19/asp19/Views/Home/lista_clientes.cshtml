@model IEnumerable<asp19.Models.Cliente>
@{
    ViewData["Subtitle"] = "Clientes registrados";
}

<div class="row">
    <div class="col-6">
        <h2 class="titulo">@ViewBag.Subtitle</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-controller="home" asp-action="adicionar_clientes" class="btn btn-primary">Adcionar clientes...</a>
    </div>
</div>

@* apresentaçao dos dados do clientes *@

@if (Model.Count() == 0)
{
    <p>Não existem clientes registrados.</p>
}
else
{
    // apresentar a tabela com os clientes registrados
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Nome</th>
                <th>Telefone</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var cliente in Model)
            {
            <tr>
                <td>@cliente.nome</td>
                <td>@cliente.telefone</td>
                <td class="text-right">
                    <a asp-controller="home" asp-action="editar_cliente"   asp-route-id ="@cliente.id" class="btn btn-primary"><i class="fa fa-pen"></i> Editar</a>
                    <a asp-controller="home" asp-action="eliminar_cliente" asp-route-id ="@cliente.id" class="btn btn-primary"><i class="fa fa-trash"></i> Eliminar</a>
                </td>
            </tr>
            }
        </tbody>
    </table>

    <p>Total: <b>@Model.Count()</b></p>
}

<div>
    <a asp-controller="home" asp-action="index" class="btn btn-primary">Voltar</a>
</div>
